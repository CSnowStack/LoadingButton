<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cq.csnowstack.MainActivity">

   <com.cq.loadingbutton.LoadingButton
       android:id="@+id/lbtn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

   </com.cq.loadingbutton.LoadingButton>



   <TextView
       android:textSize="20sp"
       android:id="@+id/success"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Success"
       android:layout_alignTop="@+id/failed"
       android:layout_alignRight="@+id/lbtn"
       android:layout_alignEnd="@+id/lbtn"/>
   <TextView
       android:textSize="20sp"
       android:id="@+id/failed"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Failed"
       android:layout_below="@+id/lbtn"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_marginTop="61dp"/>
</RelativeLayout>
